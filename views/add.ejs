<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 px-5 text-white">
  <h1>Create a new post.</h1>
  <hr class="opacity-10" />
  <form action="/createpost" method="post" enctype="multipart/form-data">
    <input
      class="block text-black w-1/3 px-3 py-2"
      type="file"
      name="postimage"
    />
    <input
      class="block text-black w-1/3 px-3 py-2 border-2 rounded-md mt-2"
      type="text"
      name="title"
      placeholder="Title"
    />
    <textarea
      class="h-40 text-black block w-1/3 px-3 py-2 border-2 rounded-md mt-2"
      type="text"
      placeholder="Description"
      name="description"
    ></textarea>
    <input
      class="block text-black w-1/3 px-3 py-2 mt-2 border-2 rounded-md bg-red-700"
      type="submit"
      value="Create a Post"
    />
  </form>
</div>

