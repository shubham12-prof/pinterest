<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white ">
  <div class="cards flex flex-wrap gap-10">
    <% if (posts && posts.length > 0) { %>
      <% posts.forEach(function(elem){ %>
          <div class="card w-32">
              <div class="w-full h-40 bg-sky-700 rounded-lg overflow-hidden">
                  <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>" alt="" />
              </div>
              <h5 class="text-sm w-32 block">
                  <%= elem.title %>
              </h5>
              <h6 class="opacity-50 font-semibold text-xs"> <%= elem.user.username %></h6>
          </div>
      <% }) %>
    <% } else { %>
      <p>No posts available.</p>
    <% } %>
  </div>
</div>
<% include ./partials/footer.ejs %>
